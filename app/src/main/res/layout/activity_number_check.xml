<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Auth.LoginActivity"
    android:paddingTop="40dp"
    android:paddingBottom="40dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@color/White"
    tools:ignore="hardcodedText"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="50dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="전화번호 인증"
            android:textSize="36sp"
            android:textColor="@color/Black"/>

        <EditText
            android:id="@+id/et_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="전화번호"
            android:inputType="number"
            android:textColorHint="@color/AWBlack"
            android:textColor="@color/AWBlack"
            tools:ignore="TextFields" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="전화번호 확인"
            android:inputType="number"
            android:textColorHint="@color/AWBlack"
            android:textColor="@color/AWBlack"/>

        <Button
            android:id="@+id/btn_sendCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_weight="0"
            android:text="인증번호 발송"
            android:textColor="@color/AWBlack"
            />

        <EditText
            android:id="@+id/et_checkCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="0"
            android:ems="10"
            android:hint="인증번호"
            android:inputType="number"
            android:textColorHint="@color/AWBlack"
            android:textColor="@color/AWBlack"/>

        <Button
            android:id="@+id/btn_checkCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="인증번호 확인"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/tv_checkCodeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text=""
            android:layout_marginBottom="30dp"
            />

        <Button
            android:id="@+id/btn_registerAfterCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="회원가입"
            android:textColor="@color/AWBlack"/>

    </LinearLayout>
</ScrollView>
